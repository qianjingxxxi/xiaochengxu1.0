<!--pages/posts/post-item/post-item.wxml-->
<template name="postItem">
  <view class='posts-container'>
    <view class='posts-author'>
      <image src='{{avatar}}'></image>
      <text>{{date}}</text>
    </view>
    <text class='posts-title'>{{title}}</text>
    <image class='posts-image' src='{{imgSrc}}'></image>
    <text class='post-content'>{{content}}</text>
    <view class='posts-link'>
      <image src='/images/icon/chat.png'></image>
      <text>{{ireading}}</text>
      <image src='/images/icon/view.png'></image>
      <text>{{collection}}</text>
    </view>
  </view>
</template>