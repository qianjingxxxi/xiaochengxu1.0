/* pages/posts/post-item/post-item.wxss */
.posts-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  border-bottom: 1px solid #ededed;
   border-top: 1px solid #ededed;
   padding-bottom: 5rpx;
}

.posts-author{
  margin: 10rpx 0 20rpx 10rpx;
}
.posts-author>image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.posts-author>text{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
}
.posts-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10rpx;
  color: #333;
}
.posts-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.posts-link{
  display: flex;
  flex-direction: row;
  line-height:16px;
  margin-left: 10rpx;
}
.posts-link image{
  width: 16px;height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.posts-link text{
  vertical-align: middle;
  margin-right: 20px;
}